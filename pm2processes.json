{
  "apps": [{
    "merge_logs": true,
    "name": "client",
    "out_file": "/tmp/client.log",
    "log_date_format": "MM/DD/YYYY HH:mm:ss",
    "script": "lib/client.js"
  }, {
    "merge_logs": true,
    "name": "server",
    "script": "lib/server.js",
    "out_file": "/tmp/servers.log",
    "log_date_format": "MM/DD/YYYY HH:mm:ss"
  }, {
    "merge_logs": true,
    "name": "pm2-notifier",
    "out_file": "/tmp/pm2-notifier.log",
    "script": "lib/pm2-notifier.js",
    "env": {
      "EC2": "ENV_CTXT"
    }
  }]
}